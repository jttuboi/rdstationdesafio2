<h1>Listing pessoas</h1>
<div>
<%#= form_tag :action => 'syncronize_salesforce' do 
%>
  <%#= submit_tag 'Syncronize with Salesforces' 
  %>
<%# end if current_user 
%>
</div>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Company</th>
      <th>Job title</th>
      <th>Phone</th>
      <th>Website</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pessoas.each do |pessoa| %>
      <tr>
        <td><%= pessoa.salesforce_id %></td>
        <td><%= pessoa.name %></td>
        <td><%= pessoa.last_name %></td>
        <td><%= pessoa.email %></td>
        <td><%= pessoa.company %></td>
        <td><%= pessoa.job_title %></td>
        <td><%= pessoa.phone %></td>
        <td><%= pessoa.website %></td>
        <td><%= link_to 'Show', pessoa %></td>
        <td><%= link_to 'Edit', edit_pessoa_path(pessoa) %></td>
        <td><%= link_to 'Destroy', pessoa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to pessoa.integrate? ? 'Disintegrate' : 'Integrate', integrate_salesforce_pessoa_path(pessoa) if current_user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pessoa', new_pessoa_path %>
